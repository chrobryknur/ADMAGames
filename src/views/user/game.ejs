<!-- views/user/games.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/style/bootstrap.css">
  <title>Game - <%= game.title %></title>
</head>
<body class="vh-100">
  <header class="bg-secondary d-flex flex-wrap justify-content-center py-2">
      <h2>Game - <%= game.title %> user panel</h2>
  </header>
  <div class="bg-secondary">
    <nav class="container d-flex flex-row justify-content-between bg-primary shadow px-3 py-3 rounded">
      <form method="GET" action="/users/cart">
        <button class="btn btn-secondary" type="submit">Show cart (<%= cartSize %>)</button>
      </form>
      <form method="POST" action="/users/logout">
        <button class="btn btn-secondary mx-1" type="submit">Logout</button>
      </form>
    </nav>
    <div class="container vh-100 py-5">
      <div class="d-flex flex-column bg-primary m-3 p-2 rounded-2">
        <div style="height:20vh; text-align: center; overflow:hidden;" >
          <img src="/uploads/<%= game.miniatureFile %>">
        </div>
        <div style="width: 100%; text-align: center;">
          <form method="POST" action='/users/cart/add/<%= game._id %>'>
            <b><%= game.title %></b>
            <p><%= game.price %>PLN</p>
            <p><%= game.description %></p>
            <button class="btn btn-secondary" type="submit">Add to cart</button></li>
          </form>
        </div>
      </div>
    </div>
    <footer class="d-flex flex-wrap align-items-center justify-content-center bg-primary shadow py-4 navbar fixed-bottom">
    </footer>
  </div>
</body>
</html>