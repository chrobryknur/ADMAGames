<!-- views/user/order.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/style/bootstrap.css">
  <title>Order</title>
</head>
<body class="vh-100">
  <header class="bg-secondary d-flex flex-wrap justify-content-center py-2">
    <h2>Order user panel</h2>
  </header>
  <div class="bg-secondary">
    <nav class="container d-flex flex-row justify-content-between bg-primary shadow px-3 py-3 rounded">
      <form method="GET" action="/games">
        <button class="btn btn-secondary" type="submit">Browse games</button>
      </form>
      <form method="GET" action="/users/cart">
        <button class="btn btn-secondary" type="submit">Show cart</button>
      </form>
      <form method="POST" action="/users/logout">
        <button class="btn btn-secondary type="submit">Logout</button>
      </form>
    </nav>
    <div class="container vh-100 py-5">
      <div class="d-flex flex-column m-3 p-2 rounded-2">
          <table class="table table-dark rounded-2">
            <thead>
              <tr>
                <th scope="col">No.</th>
                <th scope="col">Title</th>
                <th scope="col">Price</th>
              </tr>
            </thead>
            <tbody>
              <% cart.forEach((game, i) => { %>
                <tr>
                  <td scope="col"><%= i %></td>
                  <td scope="col"><%= game.title %></td>
                  <td scope="col"><%= game.price %> PLN</td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <form method="POST" action="/orders">
          <div class="row row-cols-2">
            <div class="form-group col align-items-center justify-content-center">
              <div style="width: 50%;">
                <label for="name">Name: </label><br>
                <input class="form-control" type="text" name="name" value="<%= name %>"><br>
                <label for="surname">Surname: </label><br>
                <input class="form-control" type="text" name="surname" value="<%= surname %>"><br>
                <label for="email">Email: </label><br>
                <input class="form-control" type="email" name="email" value="<%= email %>"><br>
                <label for="phoneNumber">Phone number: </label><br>
                <input class="form-control" type="text" name="phoneNumber"><br>
                <label for="delivery">Delivery: </label><br>
                <select class="form-select" name="delivery">
                  <% deliveries.forEach((delivery) => { %>
                    <option value="<%= delivery._id %>">
                      <%= delivery.name %> <%= delivery.price %> PLN
                    </option>
                  <% }) %>
                </select>
              </div>
            </div>
            <div class="form-group col align-items-center justify-content-center">
              <div style="width: 50%;">
                <label for="city">City: </label><br>
                <input class="form-control" type="text" name="city"><br>
                <label for="street">Street: </label><br>
                <input class="form-control" type="text" name="street"><br>
                <label for="building">Building number: </label><br>
                <input class="form-control" type="text" name="building"><br>
                <label for="apartment">Apartment number: </label><br>
                <input class="form-control" type="text" name="apartment"><br>
                <label for="postalCode">Postal code: </label><br>
                <input class="form-control" type="text" name="postalCode"><br>
                <button class="btn btn-primary" type="submit">Submit</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
    <footer class="d-flex flex-wrap align-items-center justify-content-center bg-primary shadow py-4 navbar fixed-bottom">
    </footer>
  </div>
</body>
<body>
</body>
</html>
