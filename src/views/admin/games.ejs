<!-- views/admin/games.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Admin - games administration page</title>
</head>
<body>
  <h2>Games administration panel</h2>
  <form method="POST" action="/users/logout">
    <button type="submit">Logout</button>
  </form>
  <form method="GET" action="/users">
    <button type="submit">Users</button>
  </form>
  <form method="GET" action="/deliveries">
    <button type="submit">Deliveries</button>
  </form>
  <form method="GET" action="/orders">
    <button type="submit">Orders</button>
  </form>
  <form method="POST" action="/games">
    <label for="title">Title: </label><br>
    <input type="text" name="title"><br>
    <label for="price">Price: </label><br>
    <input type="number" name="price"><br>
    <label for="year">Year: </label><br>
    <input type="number" name="year"><br>
    <label for="category">Category: </label><br>
    <input type="text" name="category"><br>
    <label for="miniatureUrl">Miniature: </label><br>
    <input type="text" name="miniatureUrl"><br>
    <label for="description">Description: </label><br>
    <input type="text" name="description"><br>
    <button type="submit">Add game</button>
  </form>
  <% games.forEach( game => { %>
    <form name="form" method="POST" action="/games/modify/<%= game._id %>">
      <label for="title">Title: </label>
      <input name="title" type="text" value="<%= game.title %>">
      <label for="price">Price: </label>
      <input name="price" type="number" value="<%= game.price %>">
      <label for="year">Title: </label>
      <input name="year" type="number" value="<%= game.year %>">
      <label for="category">Category: </label>
      <input name="category" type="text" value="<%= game.category %>">
      <label for="miniatureUrl">Miniature URL: </label>
      <input name="miniatureUrl" type="text" value="<%= game.miniatureUrl %>">
      <label for="description">Description: </label>
      <input name="description" type="text" value="<%= game.description %>">
      <!-- <button type="submit" onclick="javascript: form.action='/games/delete/<%= game._id %>';">Delete</button>
      <button type="submit" onclick="javascript: form.action='/games/update';"> -->
      <button type="submit" name="action" value="update">Update</button>
      <button type="submit" name="action" value="delete">Delete</button>
    </form>
  <% }) %>
</body>
</html>